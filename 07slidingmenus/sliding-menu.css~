  border: 1px solid #666;
  border-width: 4px 1px 1px 1px;
}

ul.slidingmenu li {
  background: #efe;
  text-align: center;
  border-bottom: 1px dotted #999;
}

ul.slidingmenu a {
  color: #666;
  text-decoration: none;
}

ul.slidingmenu li > a:hover { background: #cdc; color: #333; }
