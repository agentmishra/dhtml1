/* layout styles */

/*
ul { border: solid thin black; }
li { border: solid thin red; }
a { border: solid thin green; }
*/

/* remove standard HTML list indenting, and wrap */
ul.slidingmenu,
ul.slidingmenu ul,
ul.slidingmenu li,
ul.slidingmenu a { 
  padding: 0; margin: 0; width: 10em; 
}

/* make li's into clean, moveable blocks */
ul.slidingmenu li { 
  list-style-type: none; 
  position: relative;
/*  display: block;*/
}

/* make sure links fill their containers */
ul.slidingmenu a {
  display: block;
}

/* make sure any ul inside an li (a submenu) takes up zero normal flow */
ul.slidingmenu li ul { 
  position: absolute;  
  left: 100%; 
  top: -4px;
  display: none;
}

